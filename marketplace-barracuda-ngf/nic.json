{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "0.0.1",
  "parameters": {
    "apiVersion": {
      "type": "object",
      "metadata": {
        "description": "API versions"
      },
      "defaultValue": {
        "Compute": "2017-12-01",
        "Network": "2017-10-01",
        "Resources": "2017-05-10"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Azure region to deploy"
      },
      "defaultValue": "[resourceGroup().location]"
    },
    "nicName": {
      "type": "string",
      "metadata": {
        "description": "NIC Name"
      }
    },
    "publicIpRef": {
      "type": "string",
      "metadata": {
        "description": "Public IP resource id"
      },
      "defaultValue": ""
    },
    "fwVmAddress": {
      "type": "string",
      "metadata": {
        "description": "Barracuda CloudGen Firewall private IP address"
      }
    },
    "fwSubnetRef": {
      "type": "string",
      "metadata": {
        "description": "Subnet resource id"
      }
    }
  },
  "variables": {
    "nicNameFinal": "[if( empty( parameters( 'publicIpRef' )), concat( parameters( 'nicName' ), '-private' ), concat( parameters( 'nicName' ), '-public' ))]"
  },
  "resources": [
    {
      "name": "[concat( parameters( 'nicName' ), '-public' )]",
      "condition": "[not( empty( parameters( 'publicIpRef' )))]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "[parameters( 'apiVersion' ).Network ]",
      "location": "[parameters( 'location' )]",
      "properties": {
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIpAddressVersion": "IPv4",
              "privateIPAllocationMethod": "[if( not( empty( parameters( 'fwVmAddress' ))), 'Static', 'Dynamic' )]",
              "privateIpAddress": "[parameters( 'fwVmAddress' )]",
              "subnet": {
                "id": "[parameters( 'fwSubnetRef' )]"
              },
              "publicIPAddress": {
                "id": "[parameters( 'publicIpRef' )]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat( parameters( 'nicName' ), '-private' )]",
      "condition": "[empty( parameters( 'publicIpRef' ))]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "[parameters( 'apiVersion' ).Network ]",
      "location": "[parameters( 'location' )]",
      "properties": {
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIpAddressVersion": "IPv4",
              "privateIPAllocationMethod": "[if( not( empty( parameters( 'fwVmAddress' ))), 'Static', 'Dynamic' )]",
              "privateIpAddress": "[parameters( 'fwVmAddress' )]",
              "subnet": {
                "id": "[parameters( 'fwSubnetRef' )]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "selfLink": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/publicIPAddresses', variables( 'nicNameFinal' ))]"
        }
  }
}
