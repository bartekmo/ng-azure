{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "0.0.1",
  "parameters": {
    "apiVersion": {
      "type": "object",
      "metadata": {
        "description": "API versions"
      },
      "defaultValue": {
        "Compute": "2017-12-01",
        "Network": "2017-10-01",
        "Resources": "2017-05-10"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Azure region to deploy"
      },
      "defaultValue": "[resourceGroup().location]"
    },
    "nicName": {
      "type": "string",
      "metadata": {
        "description": "NIC Name"
      }
    },
    "publicIpRef": {
      "type": "string",
      "metadata": {
        "description": "Public IP resource id"
      },
      "defaultValue": ""
    },
    "fwVmAddress": {
      "type": "string",
      "metadata": {
        "description": "Barracuda CloudGen Firewall private IP address"
      }
    },
    "fwSubnetRef": {
      "type": "string",
      "metadata": {
        "description": "Subnet resource id"
      }
    },
    "fwAcl": {
      "type": "string",
      "metadata": {
        "description": "Subnet allowed to connect to management ports"
      },
      "defaultValue": "0.0.0.0/0"
    }
  },
  "variables": {
    "nicNameFinal": "[if( empty( parameters( 'publicIpRef' )), concat( parameters( 'nicName' ), '-private' ), concat( parameters( 'nicName' ), '-public' ))]",
    "mgmtPortList": [
      "807",
      "22",
      "8443"
    ]
  },
  "resources": [
    {
      "name": "[concat( parameters( 'nicName' ), '-ACL' )]",
      "condition": "[not( equal( parameters( 'fwAcl' ), '0.0.0.0/0' ))]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "[parameters( 'apiVersion' ).Network ]",
      "location": "[parameters( 'location' )]",
      "properties": {
        "securityRules": [
          {
            "name": "firewallAllowAll",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "firewallMgmtAcl-Allow",
            "properties": {
              "protocol": "TCP",
              "sourcePortRange": "*",
              "sourceAddressPrefix": "[parameters( 'fwAcl' )]",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 900,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": "[variables( 'mgmtPortList' )]",
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "firewallMgmtAcl-Deny",
            "properties": {
              "protocol": "TCP",
              "sourcePortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Deny",
              "priority": 901,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": "[variables( 'mgmtPortList' )]",
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          }
        ]
      }
    },
    {
      "name": "[concat( parameters( 'nicName' ), '-public' )]",
      "condition": "[not( empty( parameters( 'publicIpRef' )))]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "[parameters( 'apiVersion' ).Network ]",
      "location": "[parameters( 'location' )]",
      "properties": {
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIpAddressVersion": "IPv4",
              "privateIPAllocationMethod": "[if( not( empty( parameters( 'fwVmAddress' ))), 'Static', 'Dynamic' )]",
              "privateIpAddress": "[parameters( 'fwVmAddress' )]",
              "subnet": {
                "id": "[parameters( 'fwSubnetRef' )]"
              },
              "publicIPAddress": {
                "id": "[parameters( 'publicIpRef' )]"
              },
              "networkSecurityGroup": {
                    "id": "[if( equal( parameters( 'fwAcl' ), '0.0.0.0/0' ), json(null), resourceId( 'Microsoft.COmpute/networkSecurityGroups', concat( parameters( 'nicName' ), '-ACL' )))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat( parameters( 'nicName' ), '-private' )]",
      "condition": "[empty( parameters( 'publicIpRef' ))]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "[parameters( 'apiVersion' ).Network ]",
      "location": "[parameters( 'location' )]",
      "properties": {
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIpAddressVersion": "IPv4",
              "privateIPAllocationMethod": "[if( not( empty( parameters( 'fwVmAddress' ))), 'Static', 'Dynamic' )]",
              "privateIpAddress": "[parameters( 'fwVmAddress' )]",
              "subnet": {
                "id": "[parameters( 'fwSubnetRef' )]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "selfLink": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/networkInterfaces', variables( 'nicNameFinal' ))]"
        }
  }
}
